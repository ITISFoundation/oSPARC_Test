#!/usr/bin/env bash

IMAGE_NAME = itis/node-web-app


# -u : runs the container using unprivileged user (by default, it runs as root)

docker run \
  -e "NODE_ENV=production" \
  -u "node" \
  -m "300M" --memory-swap "1G" \
  -w "/home/node/app" \
  -p 49160:8080 \
  -d \
  --name "mynodejs-app" \
  ${IMAGE_NAME} "$@"
